<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="ap_ayudaLogin" prefHeight="600.0" prefWidth="546.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.biblioteca_digital.controladores.ControladorAyuda">
    <children>

        <Label id="lb_tituloAyuda"
               layoutX="45.0" layoutY="40.0"
               style="-fx-font-weight: bold;"
               text="Guía de Inicio de Sesión"
               prefWidth="450.0"
               wrapText="true">
            <font>
                <Font size="30.0" />
            </font>
            <graphic>
                <ImageView id="iv_iconoAyuda"
                           fitHeight="30.0" fitWidth="25.0"
                           pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../imagenes/IconoInterrogacion.png" />
                    </image>
                </ImageView>
            </graphic>
        </Label>

        <Label id="lb_ayuda1"
               layoutX="45.0" layoutY="100.0"
               text="Escoge con qué rol vas a iniciar sesión seleccionando 'Usuario' o 'Administrador'."
               wrapText="true"
               prefWidth="450.0">
            <font>
                <Font size="17.5" />
            </font>
            <graphic>
                <ImageView id="iv_iconoPunto1"
                           fitHeight="7.0" fitWidth="7.0"
                           pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../imagenes/icono-punto.png" />
                    </image>
                </ImageView>
            </graphic>
        </Label>

        <Label id="lb_ayuda2"
               layoutX="45.0" layoutY="170.0"
               text="Introduce tu el correo y contraseña de tu cuenta en los campos especificados."
               wrapText="true"
               prefWidth="450.0">
            <font>
                <Font size="17.5" />
            </font>
            <graphic>
                <ImageView id="iv_iconoPunto2"
                           fitHeight="7.0" fitWidth="7.0"
                           pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../imagenes/icono-punto.png" />
                    </image>
                </ImageView>
            </graphic>
        </Label>

        <Label id="lb_ayuda3"
               layoutX="45.0" layoutY="240.0"
               text="Una vez rellenados todos los campos, pulsa 'Iniciar sesión' para acceder a tu cuenta."
               wrapText="true"
               prefWidth="450.0">
            <font>
                <Font size="17.5" />
            </font>
            <graphic>
                <ImageView id="iv_iconoPunto3"
                           fitHeight="7.0" fitWidth="7.0"
                           pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../imagenes/icono-punto.png" />
                    </image>
                </ImageView>
            </graphic>
        </Label>

    </children>
</AnchorPane>
