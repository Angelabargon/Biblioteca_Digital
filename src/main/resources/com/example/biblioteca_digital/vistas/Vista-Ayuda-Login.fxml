<?xml version="1.0" encoding="UTF-8"?>

<!-- Imports de la vista -->
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<!-- Nodo Raíz -->
<AnchorPane id="ap_ayudaLogin"
            prefHeight="400.0" prefWidth="546.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.biblioteca_digital.controladores.ControladorAyuda"
            stylesheets="@../estilo/estilo.css"
            styleClass="panel">

    <children>

        <!-- Título -->
        <Label id="lb_tituloAyuda"
               layoutX="45.0" layoutY="40.0"
               prefWidth="450.0"
               text="Guía de Inicio de Sesión"
               wrapText="true"
               styleClass="titulo">
            <graphic>

                <!-- Icono de la ayuda -->
                <ImageView id="iv_iconoAyuda"
                           fitHeight="30.0" fitWidth="25.0"
                           pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../imagenes/IconoInterrogacion.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Label>

        <!-- Puntos de ayuda -->
        <Label id="lb_ayuda1"
               layoutX="45.0" layoutY="100.0"
               prefWidth="450.0"
               text="⚫ Escoge con qué rol vas a iniciar sesión seleccionando 'Usuario' o 'Administrador'."
               textAlignment="JUSTIFY"
               wrapText="true"
               styleClass="subtitulo"/>

        <Label id="lb_ayuda2"
               layoutX="45.0" layoutY="170.0"
               prefWidth="450.0"
               text="⚫ Introduce tu correo y contraseña de tu cuenta en los campos especificados."
               textAlignment="JUSTIFY"
               wrapText="true"
               styleClass="subtitulo"/>

        <Label id="lb_ayuda3"
               layoutX="45.0" layoutY="240.0"
               prefWidth="450.0"
               text="⚫ Una vez rellenados todos los campos, pulsa 'Iniciar sesión' para acceder a tu cuenta."
               textAlignment="JUSTIFY"
               wrapText="true"
               styleClass="subtitulo"/>

        <!-- Botón cerrar -->
        <Button id="bt_cerrarAyuda"
                alignment="CENTER"
                layoutX="230.0" layoutY="323.0"
                mnemonicParsing="false"
                onAction="#cerrarAyuda"
                prefHeight="35.0" prefWidth="85.0"
                text="Cerrar"
                styleClass="button-secundario"/>
    </children>

</AnchorPane>