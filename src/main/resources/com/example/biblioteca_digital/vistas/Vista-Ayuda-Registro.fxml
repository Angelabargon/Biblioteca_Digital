<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane id="ap_ayudaRegistro"
            prefHeight="400.0" prefWidth="546.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.biblioteca_digital.controladores.ControladorAyuda"
            stylesheets="@../estilo/estilo.css"
            styleClass="panel">

    <children>

        <!-- Título -->
        <Label id="lb_tituloAyuda"
               layoutX="45.0" layoutY="40.0"
               prefWidth="450.0"
               text="Guía de Registro de Cuenta"
               wrapText="true"
               styleClass="titulo">
            <graphic>
                <ImageView id="iv_iconoAyuda"
                           fitHeight="30.0" fitWidth="25.0"
                           pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../imagenes/IconoInterrogacion.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Label>

        <!-- Puntos de ayuda -->
        <Label id="lb_ayuda1"
               layoutX="45.0" layoutY="100.0"
               prefWidth="450.0"
               text="⚫ Introduce el nombre que tendrá tu usuario junto con tu nombre y apellidos reales y un correo asociado a este."
               textAlignment="JUSTIFY"
               wrapText="true"
               styleClass="subtitulo"/>

        <Label id="lb_ayuda2"
               layoutX="45.0" layoutY="170.0"
               prefWidth="450.0"
               text="⚫ Introduce una contraseña que puedas recordar y confírmala en el segundo campo."
               textAlignment="JUSTIFY"
               wrapText="true"
               styleClass="subtitulo"/>

        <Label id="lb_ayuda3"
               layoutX="45.0" layoutY="240.0"
               prefWidth="450.0"
               text="⚫ Acepta los Términos de Privacidad y pulsa Guardar y registrar para registrarte con los datos introducidos."
               textAlignment="JUSTIFY"
               wrapText="true"
               styleClass="subtitulo"/>

        <!-- Botón cerrar -->
        <Button id="bt_cerrarAyuda"
                alignment="CENTER"
                layoutX="230.0" layoutY="323.0"
                mnemonicParsing="false"
                onAction="#cerrarAyuda"
                prefHeight="35.0" prefWidth="85.0"
                text="Cerrar"
                styleClass="button-secundario"/>
    </children>
</AnchorPane>
