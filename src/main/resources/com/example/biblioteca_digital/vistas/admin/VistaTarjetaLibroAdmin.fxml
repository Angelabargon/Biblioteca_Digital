<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="300" prefWidth="180" spacing="10" styleClass="card" stylesheets="@../../estilo/estilo.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.biblioteca_digital.controladores.admin.ControladorLibroCatalogoAdmin">

    <ImageView fx:id="imgPortada" fitHeight="200" fitWidth="190" preserveRatio="true" />

    <Label fx:id="lblTitulo" styleClass="card-title" />
    <Label fx:id="lblAutor" styleClass="card-author" />
    <Label fx:id="lblGenero" styleClass="card-genre" />
    <Label fx:id="lblDisponibles" styleClass="card-stock" />

    <Button fx:id="btnVer" onAction="#handleVerDetalles" prefHeight="34.0" prefWidth="190.0" styleClass="btn-ver" text="Ver" />

</VBox>
