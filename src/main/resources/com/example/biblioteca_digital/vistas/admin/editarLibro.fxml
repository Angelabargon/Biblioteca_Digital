<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.biblioteca_digital.controladores.admin.ControladorEditarLibros"
            style="-fx-background-color: #FFF7ED; -fx-padding: 20; -fx-background-radius: 15;">

    <!-- Botón cerrar -->
    <top>
        <HBox alignment="TOP_RIGHT">
            <Button text="✕" onAction="#cerrarVentana"
                    style="-fx-background-color: transparent; -fx-font-size: 16;"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="20">

            <Label text="Editar Libro"
                   style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #5C3D2E;"/>

            <GridPane hgap="20" vgap="15">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50"/>
                    <ColumnConstraints percentWidth="50"/>
                </columnConstraints>

                <!-- TÍTULO -->
                <Label text="Título" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtTitulo" GridPane.rowIndex="1" GridPane.columnIndex="0"
                           style="-fx-background-color: #F8EFE3; -fx-background-radius: 8;"/>

                <!-- AUTOR -->
                <Label text="Autor" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <TextField fx:id="txtAutor" GridPane.rowIndex="1" GridPane.columnIndex="1"
                           style="-fx-background-color: #F8EFE3; -fx-background-radius: 8;"/>

                <!-- CATEGORÍA -->
                <Label text="Categoría" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <ComboBox fx:id="comboCategoria" GridPane.rowIndex="3" GridPane.columnIndex="0"
                          style="-fx-background-color: #F8EFE3; -fx-background-radius: 8;"/>

                <!-- ISBN -->
                <Label text="ISBN" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <TextField fx:id="txtIsbn" GridPane.rowIndex="3" GridPane.columnIndex="1"
                           style="-fx-background-color: #F8EFE3; -fx-background-radius: 8;"/>

                <!-- CANTIDAD -->
                <Label text="Total de Copias" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="txtCantidad" GridPane.rowIndex="5" GridPane.columnIndex="0"
                           style="-fx-background-color: #F8EFE3; -fx-background-radius: 8;"/>

                <!-- URL PORTADA -->
                <Label text="URL de Portada" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                <TextField fx:id="txtFoto" GridPane.rowIndex="5" GridPane.columnIndex="1"
                           style="-fx-background-color: #F8EFE3; -fx-background-radius: 8;"/>

            </GridPane>

            <!-- DESCRIPCIÓN -->
            <Label text="Descripción"/>
            <TextArea fx:id="txtDescripcion"
                      prefHeight="120"
                      style="-fx-background-color: #F8EFE3; -fx-background-radius: 8;"/>

            <!-- BOTONES -->
            <HBox spacing="15" alignment="CENTER_RIGHT">
                <Button text="Cancelar" onAction="#cancelar"
                        style="-fx-background-color: transparent; -fx-text-fill: #5C3D2E; -fx-font-size: 14;"/>

                <Button text="Guardar" onAction="#guardar"
                        style="-fx-background-color: #A65B1A; -fx-text-fill: white;
                               -fx-background-radius: 8; -fx-padding: 8 18; -fx-font-size: 14;"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>
