<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.biblioteca_digital.controladores.admin.ControladorEditarUsuario"
           style="-fx-background-color: rgba(0,0,0,0.35);">

    <VBox alignment="CENTER" prefWidth="800">
        <!-- CONTENEDOR DEL MODAL -->
        <VBox spacing="22"
              maxWidth="600"
              style="
                  -fx-background-color:#faf7f3;
                  -fx-padding:32;
                  -fx-background-radius:16;
                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.18), 20, 0, 0, 6);
              ">

            <!-- TÍTULO Y CERRAR -->
            <HBox alignment="CENTER_LEFT">
                <Label text="Editar Usuario"
                       style="-fx-font-size:22px; -fx-font-weight:700; -fx-text-fill:#3a3a3a;"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Button text="✕"
                        onAction="#cancelar"
                        style="
                            -fx-background-color: transparent;
                            -fx-font-size:18px;
                            -fx-text-fill:#555;
                        "/>
            </HBox>

            <!-- CAMPOS -->
            <VBox spacing="14">

                <Label text="Nombre de usuario"
                       style="-fx-font-size:14px; -fx-font-weight:600; -fx-text-fill:#3a3a3a;"/>
                <TextField fx:id="txtUsuario"
                           style="
                               -fx-background-color:#fff;
                               -fx-background-radius:10;
                               -fx-padding:10 14;
                               -fx-font-size:14px;
                               -fx-border-color:#e3ded7;
                               -fx-border-radius:10;
                           "/>

                <Label text="Nombre"
                       style="-fx-font-size:14px; -fx-font-weight:600; -fx-text-fill:#3a3a3a;"/>
                <TextField fx:id="txtNombre"
                           style="
                               -fx-background-color:#fff;
                               -fx-background-radius:10;
                               -fx-padding:10 14;
                               -fx-font-size:14px;
                               -fx-border-color:#e3ded7;
                               -fx-border-radius:10;
                           "/>

                <Label text="Primer Apellido"
                       style="-fx-font-size:14px; -fx-font-weight:600; -fx-text-fill:#3a3a3a;"/>
                <TextField fx:id="txtPrimerApellido"
                           style="
                               -fx-background-color:#fff;
                               -fx-background-radius:10;
                               -fx-padding:10 14;
                               -fx-font-size:14px;
                               -fx-border-color:#e3ded7;
                               -fx-border-radius:10;
                           "/>

                <Label text="Correo"
                       style="-fx-font-size:14px; -fx-font-weight:600; -fx-text-fill:#3a3a3a;"/>
                <TextField fx:id="txtCorreo"
                           style="
                               -fx-background-color:#fff;
                               -fx-background-radius:10;
                               -fx-padding:10 14;
                               -fx-font-size:14px;
                               -fx-border-color:#e3ded7;
                               -fx-border-radius:10;
                           "/>

                <Label text="Contraseña"
                       style="-fx-font-size:14px; -fx-font-weight:600; -fx-text-fill:#3a3a3a;"/>
                <PasswordField fx:id="txtContrasena"
                               style="
                                   -fx-background-color:#fff;
                                   -fx-background-radius:10;
                                   -fx-padding:10 14;
                                   -fx-font-size:14px;
                                   -fx-border-color:#e3ded7;
                                   -fx-border-radius:10;
                               "/>

                <Label text="Rol"
                       style="-fx-font-size:14px; -fx-font-weight:600; -fx-text-fill:#3a3a3a;"/>
                <ComboBox fx:id="comboRol"
                          style="
                              -fx-background-color:#fff;
                              -fx-background-radius:10;
                              -fx-padding:8;
                              -fx-border-color:#e3ded7;
                              -fx-border-radius:10;
                              -fx-font-size:14px;
                          "/>

            </VBox>
            <!-- BOTONES -->
            <HBox spacing="16" alignment="CENTER_RIGHT">

                <Button text="Cancelar"
                        onAction="#cancelar"
                        style="
                            -fx-background-color:transparent;
                            -fx-text-fill:#6b6b6b;
                            -fx-font-size:14px;
                            -fx-font-weight:600;
                            -fx-padding:10 22;
                            -fx-background-radius:10;
                        "/>

                <Button text="Guardar"
                        onAction="#guardar"
                        style="
                            -fx-background-color:#8b4b2e;
                            -fx-text-fill:white;
                            -fx-font-size:14px;
                            -fx-font-weight:600;
                            -fx-padding:10 22;
                            -fx-background-radius:10;
                        "/>

            </HBox>

        </VBox>
    </VBox>

</StackPane>