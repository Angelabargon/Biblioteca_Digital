<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="578.0" prefWidth="1061.0" spacing="20" style="-fx-background-color:#f6f2ec; -fx-padding:32;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="com.example.biblioteca_digital.controladores.admin.ControladorPrestamosAdmin">

    <!-- TÍTULO + BOTÓN -->
    <HBox alignment="CENTER_LEFT" spacing="16">
        <Label style="-fx-font-size:24px; -fx-font-weight:700; -fx-text-fill:#3a3a3a;" text="Gestión de Préstamos" />

        <Region HBox.hgrow="ALWAYS" />

        <Button onAction="#nuevoPrestamo" style="                     -fx-background-color:#8b4b2e;                     -fx-text-fill:white;                     -fx-font-weight:600;                     -fx-font-size:14px;                     -fx-padding:10 22;                     -fx-background-radius:12;" text="+  Nuevo Préstamo">
        </Button>
    </HBox>

    <!-- TABLA ESTILO FIGMA -->

    <HBox alignment="CENTER_LEFT" spacing="8">
        <TextField fx:id="txtBuscar" promptText="Buscar..." />
    </HBox>

    <TableView fx:id="tablaPrestamos" style="                    -fx-background-color:white;                    -fx-background-radius:14;                    -fx-border-color:#e5e3dd;                    -fx-border-radius:14;                    -fx-table-cell-border-color: transparent;                    -fx-padding:6;                    -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 14, 0, 0, 4);                    -fx-fixed-cell-size:46;" VBox.vgrow="ALWAYS">

        <columns>

            <TableColumn fx:id="colUsuario" prefWidth="240" style="-fx-font-size:14px; -fx-font-weight:600;" text="Usuario" />

            <TableColumn fx:id="colLibro" prefWidth="180" style="-fx-font-size:14px; -fx-font-weight:600;" text="Libro" />

            <TableColumn fx:id="colFechaPrestamo" prefWidth="160.80007934570312" style="-fx-font-size:14px; -fx-font-weight:600;" text="Fecha Préstamo" />

            <TableColumn fx:id="colFechaVencimiento" prefWidth="146.39996337890625" style="-fx-font-size:14px; -fx-font-weight:600;" text="Vencimiento" />

            <TableColumn fx:id="colEstado" prefWidth="133.60003662109375" style="-fx-font-size:14px; -fx-font-weight:600;" text="Estado" />

            <TableColumn fx:id="colAcciones" prefWidth="120.0" style="-fx-font-size:14px; -fx-font-weight:600;" text="Acciones" />

        </columns>

    </TableView>

</VBox>
