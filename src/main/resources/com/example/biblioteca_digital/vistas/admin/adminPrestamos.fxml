<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.biblioteca_digital.controladores.admin.ControladorPrestamosAdmin"
      spacing="20"
      style="-fx-background-color:#f6f2ec; -fx-padding:32;">

    <!-- TÍTULO + BOTÓN -->
    <HBox alignment="CENTER_LEFT" spacing="16">
        <Label text="Gestión de Préstamos"
               style="-fx-font-size:24px; -fx-font-weight:700; -fx-text-fill:#3a3a3a;"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Button text="+  Nuevo Préstamo"
                onAction="#nuevoPrestamo"
                style="
                    -fx-background-color:#8b4b2e;
                    -fx-text-fill:white;
                    -fx-font-weight:600;
                    -fx-font-size:14px;
                    -fx-padding:10 22;
                    -fx-background-radius:12;">
        </Button>
    </HBox>

    <!-- TABLA ESTILO FIGMA -->

    <HBox spacing="8" alignment="CENTER_LEFT">
        <TextField fx:id="txtBuscar" promptText="Buscar..." />
    </HBox>

    <TableView fx:id="tablaPrestamos"
               VBox.vgrow="ALWAYS"
               style="
                   -fx-background-color:white;
                   -fx-background-radius:14;
                   -fx-border-color:#e5e3dd;
                   -fx-border-radius:14;
                   -fx-table-cell-border-color: transparent;
                   -fx-padding:6;
                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 14, 0, 0, 4);
                   -fx-fixed-cell-size:46;">

        <columns>

            <TableColumn fx:id="colUsuario" text="Usuario" prefWidth="240"
                         style="-fx-font-size:14px; -fx-font-weight:600;"/>

            <TableColumn fx:id="colLibro" text="Libro" prefWidth="180"
                         style="-fx-font-size:14px; -fx-font-weight:600;"/>

            <TableColumn fx:id="colFechaPrestamo" text="Fecha Préstamo" prefWidth="150"
                         style="-fx-font-size:14px; -fx-font-weight:600;"/>

            <TableColumn fx:id="colFechaVencimiento" text="Vencimiento" prefWidth="150"
                         style="-fx-font-size:14px; -fx-font-weight:600;"/>

            <TableColumn fx:id="colEstado" text="Estado" prefWidth="130"
                         style="-fx-font-size:14px; -fx-font-weight:600;"/>

            <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="120"
                         style="-fx-font-size:14px; -fx-font-weight:600;"/>

        </columns>

    </TableView>

</VBox>
