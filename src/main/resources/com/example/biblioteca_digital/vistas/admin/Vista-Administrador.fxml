<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="770.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.biblioteca_digital.controladores.admin.ControladorAdministrador">

    <!-- TOP: TÍTULO / ESTADÍSTICAS / BARRA DE APARTADOS -->
    <top>
        <VBox prefHeight="195.0" prefWidth="867.0" spacing="12" style="-fx-padding: 14 20 10 20; -fx-background-color: transparent;">

            <!-- FILA 1: TITULO -->
            <HBox>
                <Label style="-fx-font-size:24px; -fx-font-weight:700; -fx-text-fill: #2b2b2b;" text="Panel de Administración" />
                <Region HBox.hgrow="ALWAYS" />

                <!-- Botón (Cerrar Sesión) a la derecha  -->
                <Button onAction="#cerrarSesion" style="-fx-background-color:#8b4b2e; -fx-text-fill:white; -fx-padding:8 14;" text="Cerrar sesión" />
            </HBox>

            <!-- FILA 2: ESTADÍSTICAS -->
            <HBox spacing="12" style="-fx-padding: 6 0 0 0;">
                <HBox spacing="10" style="-fx-background-color: white; -fx-padding:12; -fx-border-radius:8; -fx-background-radius:8;">
                    <VBox>
                        <Label style="-fx-text-fill:#6b6b6b;" text="Total Libros" />
                        <Label fx:id="lblTotalLibros" style="-fx-font-size:18px; -fx-font-weight:bold;" text="0" />
                    </VBox>
                </HBox>

                <HBox spacing="10" style="-fx-background-color: white; -fx-padding:12; -fx-border-radius:8; -fx-background-radius:8;">
                    <VBox>
                        <Label style="-fx-text-fill:#6b6b6b;" text="Total Usuarios" />
                        <Label fx:id="lblTotalUsuarios" style="-fx-font-size:18px; -fx-font-weight:bold;" text="0" />
                    </VBox>
                </HBox>

                <HBox spacing="10" style="-fx-background-color: white; -fx-padding:12; -fx-border-radius:8; -fx-background-radius:8;">
                    <VBox>
                        <Label style="-fx-text-fill:#6b6b6b;" text="Préstamos Activos" />
                        <Label fx:id="lblPrestamosActivos" style="-fx-font-size:18px; -fx-font-weight:bold;" text="0" />
                    </VBox>
                </HBox>

                <HBox spacing="10" style="-fx-background-color: white; -fx-padding:12; -fx-border-radius:8; -fx-background-radius:8;">
                    <VBox>
                        <Label style="-fx-text-fill:#6b6b6b;" text="Préstamos Vencidos" />
                        <Label fx:id="lblPrestamosVencidos" style="-fx-font-size:18px; -fx-font-weight:bold;" text="0" />
                    </VBox>
                </HBox>

                <Region HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- FILA 3: BARRA DE APARTADOS -->
            <HBox>
                <HBox spacing="6" style="-fx-background-color:#efe9e2; -fx-padding:6; -fx-background-radius:18;">
                    <!-- Botones: llamarán a los métodos del controlador -->
                    <Button onAction="#mostrarLibros" style="-fx-background-color:transparent; -fx-padding:8 18; -fx-font-weight:600;" text="Libros" />
                    <Button onAction="#mostrarUsuarios" style="-fx-background-color:transparent; -fx-padding:8 18; -fx-font-weight:600;" text="Usuarios" />
                    <Button onAction="#mostrarPrestamos" style="-fx-background-color:transparent; -fx-padding:8 18; -fx-font-weight:600;" text="Préstamos" />
                    <Button onAction="#mostrarCatalogo" style="-fx-background-color:transparent; -fx-padding:8 18; -fx-font-weight:600;" text="Catálogo" />
                </HBox>

                <Region HBox.hgrow="ALWAYS" />
            </HBox>

        </VBox>
    </top>

    <!-- CENTER: Panel donde se cargan las sub-vistas (libros/usuarios/prestamos/catalogo) -->
    <center>
        <AnchorPane fx:id="panelContenido" prefHeight="770.0" prefWidth="1400.0" style="-fx-padding:16; -fx-background-color: transparent;" />
    </center>

</BorderPane>
