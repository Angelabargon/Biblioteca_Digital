<?xml version="1.0" encoding="UTF-8"?>

<!-- Imports para la vista -->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<!-- Nodo Raíz -->
<AnchorPane prefHeight="548.0" prefWidth="1410.0" styleClass="fondo-secundario" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.biblioteca_digital.controladores.usuario.ControladorFavoritosUsuario">

    <!-- Contenedor principal -->
    <VBox spacing="15" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0" >

        <!-- Título -->
        <Label styleClass="titulo-principal" text="Mis Libros Favoritos" />

         <!-- Lista de favoritos, igual que en el catálogo -->
         <VBox prefHeight="663.0" prefWidth="956.0" spacing="5" VBox.vgrow="ALWAYS">

             <ScrollPane fitToWidth="true" prefHeight="400.0" prefWidth="973.0" styleClass="scroll-pane" VBox.vgrow="ALWAYS">
                 <FlowPane fx:id="contenedorFavoritos" hgap="15" styleClass="flow-pane" vgap="15" prefWrapLength="900">
                     <padding>
                         <Insets bottom="10" left="10" right="10" top="10" />
                     </padding>
                 </FlowPane>
             </ScrollPane>
         </VBox>

    </VBox>
</AnchorPane>
