<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.biblioteca_digital.controladores.ControladorAyuda"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="@../../estilo/estilo.css"
            styleClass="panel">

    <children>

        <!-- TÍTULO -->
        <Label id="lb_tituloAyuda"
               layoutX="45.0" layoutY="40.0"
               prefWidth="450.0"
               text="Guía de Perfil Usuario"
               wrapText="true"
               styleClass="titulo">
            <graphic>
                <ImageView id="iv_iconoAyuda"
                           fitHeight="30.0" fitWidth="25.0"
                           pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../imagenes/IconoInterrogacion.png" />
                    </image>
                </ImageView>
            </graphic>
        </Label>

        <!-- PUNTOS DE AYUDA -->
        <Label id="lb_ayuda1"
               layoutX="45.0" layoutY="100.0"
               prefWidth="450.0"
               text="⚫ A continuación se pueden ver la imagen de su perfil junto con los datos de su cuenta."
               textAlignment="JUSTIFY"
               wrapText="true"
               styleClass="subtitulo"/>

        <Label id="lb_ayuda2"
               layoutX="45.0" layoutY="170.0"
               prefWidth="450.0"
               text="⚫ En caso de querer cambiar su contraseña, pulse el botón e introduzca la nueva dos veces para confirmar."
               textAlignment="JUSTIFY"
               wrapText="true"
               styleClass="subtitulo"/>

        <Label id="lb_ayuda3"
               layoutX="45.0" layoutY="240.0"
               prefWidth="450.0"
               text="⚫ Para cerrar sesión pulse el botón y será llevado a la página de inicio sin su cuenta iniciada."
               textAlignment="JUSTIFY"
               wrapText="true"
               styleClass="subtitulo"/>

        <!-- BOTÓN CERRAR -->
        <Button id="bt_cerrarAyuda"
                alignment="CENTER"
                layoutX="230.0" layoutY="323.0"
                mnemonicParsing="false"
                onAction="#cerrarAyuda"
                prefHeight="35.0" prefWidth="85.0"
                text="Cerrar"
                styleClass="button-secundario"/>
    </children>

</AnchorPane>
