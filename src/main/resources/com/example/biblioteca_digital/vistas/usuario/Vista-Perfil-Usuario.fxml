<?xml version="1.0" encoding="UTF-8"?>

<!-- Imports de la vista -->

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<!-- Nodo Raíz -->

<AnchorPane prefHeight="527.5" prefWidth="450.0" styleClass="panel" stylesheets="@../../estilo/estilo.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.biblioteca_digital.controladores.usuario.ControladorPerfilUsuario">

    <children>

        <!-- Icono del usuario -->
        <ImageView fx:id="iv_icono" fitHeight="101.0" fitWidth="102.0" layoutX="175.0" layoutY="32.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../imagenes/IconoUsuario.png" />
            </image>
        </ImageView>

        <!-- Labels de información -->
        <Label fx:id="lb_nombreUsuario" alignment="CENTER" layoutY="175.0" prefWidth="450.0" styleClass="subtitulo" text="Label">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></Label>

        <Label fx:id="lb_nombreReal" alignment="CENTER" layoutY="214.0" prefWidth="450.0" styleClass="subtitulo" text="Label">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></Label>

        <Label fx:id="lb_favoritos" alignment="CENTER" layoutY="251.0" prefWidth="450.0" styleClass="subtitulo" text="Label">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></Label>

        <Label fx:id="lb_prestamos" alignment="CENTER" layoutY="290.0" prefWidth="450.0" styleClass="subtitulo" text="Label">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></Label>

        <!-- Botón para cambiar de contraseña -->
        <Button fx:id="bt_cambioContrasena" layoutX="147.0" layoutY="343.0" mnemonicParsing="false" onAction="#cambiarContrasena" prefHeight="35.0" prefWidth="155.0" styleClass="button-principal" text="Cambiar Contraseña" />

        <!-- Botón para cerrar sesión -->
        <Button fx:id="bt_cerrarSesion" layoutX="147.0" layoutY="399.0" mnemonicParsing="false" onAction="#cerrarSesion" prefHeight="35.0" prefWidth="155.0" styleClass="button-principal" text="Cerrar Sesión" />

        <!-- Botón cerrar perfil -->
        <Button fx:id="bt_cerrar" alignment="CENTER" layoutX="31.0" layoutY="456.0" mnemonicParsing="false" onAction="#cerrarPerfil" prefHeight="35.0" prefWidth="95.0" styleClass="button-secundario" text="Volver">
            <graphic>

                <!-- Icono de volver atrás -->
                <ImageView id="iv_iconoAtras" fitHeight="20.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../imagenes/icono-volver.png" />
                    </image>
                </ImageView>
            </graphic>
         <font>
            <Font size="15.0" />
         </font>
        </Button>

        <!-- Botón de ayuda -->
        <Button fx:id="bt_ayuda" alignment="CENTER" layoutX="326.0" layoutY="32.0" mnemonicParsing="false" onAction="#mostrarAyuda" prefHeight="35.0" prefWidth="95.0" styleClass="button-secundario" text="Ayuda">
            <graphic>

                <!-- Icono de ayuda -->
                <ImageView id="iv_iconoAyuda" fitHeight="20.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../imagenes/IconoInterrogacion.png" />
                    </image>
                </ImageView>
            </graphic>
         <font>
            <Font size="15.0" />
         </font>
        </Button>
      <Line endX="100.0" layoutX="225.0" layoutY="151.0" startX="-100.0" styleClass="linea-decorativa" />

    </children>

</AnchorPane>
