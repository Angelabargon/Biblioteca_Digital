<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="100.0" minWidth="600.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.biblioteca_digital.controladores.usuario.ControladorPedirPrestamo"
            stylesheets="@../../estilo/estilo.css"
            styleClass="panel">

    <HBox alignment="CENTER_LEFT"
          prefHeight="100.0"
          styleClass="filtro-box"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">

        <padding>
            <Insets bottom="10.0" left="15.0" right="15.0" top="10.0"/>
        </padding>

        <!-- Información del libro -->
        <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS" spacing="5.0">
            <Label fx:id="lblTitulo"
                   text="Título del Libro (Libro de ejemplo)"
                   wrapText="true"
                   styleClass="titulo"/>
            <Label fx:id="lblAutor"
                   text="Autor del Libro (Autor Ejemplo)"
                   styleClass="subtitulo"/>
        </VBox>

        <Region HBox.hgrow="ALWAYS"/>

        <!-- Estado y acción -->
        <VBox alignment="CENTER_RIGHT" spacing="5.0">
            <Label fx:id="lblDiasRestantes"
                   alignment="CENTER"
                   prefWidth="120.0"
                   text="XX días restantes"
                   styleClass="badge-aviso"/>

            <Button fx:id="btnLeerLibro"
                    onAction="#handleBotonLeer"
                    text="Leer Libro"
                    prefWidth="120.0"
                    styleClass="button-principal"/>
        </VBox>
    </HBox>
</AnchorPane>