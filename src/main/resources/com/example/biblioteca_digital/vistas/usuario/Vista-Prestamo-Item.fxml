<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox minWidth="600.0" prefHeight="100.0" styleClass="filtro-box"
      stylesheets="@../../estilo/estilo.css"
      xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.biblioteca_digital.controladores.usuario.ControladorPedirPrestamo"
      spacing="10">

    <VBox alignment="CENTER_LEFT" spacing="5.0" HBox.hgrow="ALWAYS">
        <Label fx:id="lblTitulo" styleClass="titulo" wrapText="true" />
        <Label fx:id="lblAutor" styleClass="subtitulo" />
    </VBox>

    <Region HBox.hgrow="ALWAYS" />

    <VBox alignment="CENTER_RIGHT" spacing="5.0">
        <Label fx:id="lblDiasRestantes" alignment="CENTER" prefWidth="120.0" styleClass="badge-aviso"/>
        <Button fx:id="btnLeerLibro" onAction="#handleBotonLeer" prefWidth="120.0" styleClass="button-principal" text="Leer Libro"/>
        <Button fx:id="btnQuitarLibro" onAction="#handleBotonQuitar" prefHeight="26.0" prefWidth="122.0" styleClass="button-quitar" text="Quitar Libro"/>
    </VBox>
</HBox>

