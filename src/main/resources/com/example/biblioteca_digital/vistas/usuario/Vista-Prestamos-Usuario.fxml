<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="548.0" prefWidth="1410.0" styleClass="fondo-secundario" stylesheets="@../../estilo/estilo.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.biblioteca_digital.controladores.usuario.ControladorPrestamosUsuario">

    <VBox spacing="15" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <!-- Título sección -->
        <Label fx:id="labelTituloSeccion" prefHeight="56.0" prefWidth="364.0" styleClass="titulo-principal" text="Mis Préstamos Activos">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets left="20.0" />
         </VBox.margin></Label>

        <!-- Contenedor de préstamos -->
        <ScrollPane fitToWidth="true" styleClass="scroll-pane" VBox.vgrow="ALWAYS">

            <VBox fx:id="contenedorPrestamos" fillWidth="true" spacing="15">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
            </VBox>

        </ScrollPane>
    </VBox>
</AnchorPane>
