<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="770.0" prefWidth="1400.0" styleClass="panel" stylesheets="@../../estilo/estilo.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.biblioteca_digital.controladores.usuario.ControladorMenuInicioUsuario">

    <!-- Fondo -->
    <ImageView id="iv_fondoLogin" fitHeight="795.0" fitWidth="1541.0" layoutY="-43.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../../imagenes/fondo-biblioteca.png" />
        </image>
    </ImageView>

    <!-- Título -->
    <Label layoutX="269.0" layoutY="34.0" prefHeight="54.0" prefWidth="269.0" styleClass="titulo" text="Biblioteca Digital" />

    <!-- Menú de navegación -->
    <HBox id="hb_tbg" alignment="CENTER" layoutX="122.0" layoutY="171.0">

        <children>
            <ToggleButton fx:id="tbt_MENU" onAction="#handleCatalogo" prefHeight="35.0" prefWidth="150.0" styleClass="toggle-opcion" text="Catálogo">
                <toggleGroup>
                    <ToggleGroup fx:id="menuGroup" />
                </toggleGroup>
            </ToggleButton>

            <ToggleButton fx:id="tbt_PRESTAMOS" onAction="#handlePrestamos" prefHeight="35.0" prefWidth="150.0" styleClass="toggle-opcion" text="Mis préstamos" toggleGroup="$menuGroup" />

            <ToggleButton fx:id="tbt_FAVORITOS" onAction="#handleFavoritos" prefHeight="35.0" prefWidth="150.0" styleClass="toggle-opcion" text="Mis favoritos" toggleGroup="$menuGroup" />
        </children>
    </HBox>

    <!-- Contenedor dinámico -->
    <AnchorPane fx:id="contenedor" layoutX="0" layoutY="237.0" prefWidth="1400.0" styleClass="panel"
                AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0"
                AnchorPane.topAnchor="237.0"
                AnchorPane.bottomAnchor="0.0" />
    <!-- Icono usuario -->
    <ImageView fx:id="iv_iconoUsuario" fitHeight="106.0" fitWidth="217.0" layoutX="142.0" layoutY="34.0" onMouseClicked="#abrirPerfil" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../../imagenes/IconoUsuario.png" />
        </image>
    </ImageView>

    <!-- Botón ayuda -->
    <Button fx:id="bt_ayuda" alignment="CENTER" layoutX="1293.0" layoutY="25.0" mnemonicParsing="false" onAction="#mostrarAyuda" prefHeight="35.0" prefWidth="85.0" styleClass="button-secundario" text="Ayuda">
        <graphic>
            <ImageView id="iv_iconoAyuda" fitHeight="20.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../../imagenes/IconoInterrogacion.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>
</AnchorPane>
