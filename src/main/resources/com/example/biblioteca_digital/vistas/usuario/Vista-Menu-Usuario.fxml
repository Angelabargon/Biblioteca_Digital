      <ToggleButton fx:id="tbt_PRESTAMOS" layoutX="410.0" layoutY="146.0" onAction="#handlePrestamos" prefHeight="35.0" prefWidth="150.0" styleClass="toggle-button" text="Mis préstamos" toggleGroup="$menuGroup" />

      <ToggleButton fx:id="tbt_FAVORITOS" layoutX="561.0" layoutY="146.0" onAction="#handleFavoritos" prefHeight="35.0" prefWidth="150.0" styleClass="toggle-button" text="Mis favoritos" toggleGroup="$menuGroup" />

