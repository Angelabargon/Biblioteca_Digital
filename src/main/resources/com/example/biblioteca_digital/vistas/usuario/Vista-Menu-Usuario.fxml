<AnchorPane prefHeight="770.0" prefWidth="1400.0" styleClass="panel" stylesheets="@../../estilo/estilo.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.biblioteca_digital.controladores.usuario.ControladorMenuInicioUsuario">

    <!-- Fondo -->
    <ImageView id="iv_fondoLogin" fitHeight="795.0" fitWidth="1541.0" layoutY="-43.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../../imagenes/fondo-biblioteca.png" />
