    <Button fx:id="bt_ayuda" alignment="CENTER" layoutX="1293.0" layoutY="25.0" mnemonicParsing="false" onAction="#mostrarAyuda" prefHeight="35.0" prefWidth="95.0" styleClass="button-secundario" text="Ayuda">
