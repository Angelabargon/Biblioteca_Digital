<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.biblioteca_digital.controladores.admin.ControladorEditarLibros" spacing="8" style="-fx-padding:12;">
    <Label text="Editar / Añadir libro" style="-fx-font-weight:bold; -fx-font-size:14;"/>
    <TextField fx:id="txtTitulo" promptText="Título"/>
    <TextField fx:id="txtAutor" promptText="Autor"/>
    <TextField fx:id="txtGenero" promptText="Género"/>
    <TextArea fx:id="txtDescripcion" promptText="Descripción"/>
    <TextField fx:id="txtCantidad" promptText="Cantidad"/>
    <HBox spacing="8">
        <Button text="Guardar" onAction="#guardar" style="-fx-background-color:#10B981; -fx-text-fill:white;"/>
        <Button text="Cancelar" onAction="#cancelar"/>
    </HBox>
</VBox>
