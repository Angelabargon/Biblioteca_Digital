<AnchorPane prefHeight="393.0" prefWidth="850" styleClass="panel" stylesheets="@../estilo/estilo.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.biblioteca_digital.controladores.usuario.ControladorLibrosIndividual">

    <HBox prefHeight="380.0" prefWidth="810.0" spacing="30" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">

        <!-- IMAGEN DEL LIBRO -->
        <ImageView fx:id="imagenLibro" fitHeight="380" fitWidth="260" styleClass="imagen-libro" />

        <!-- PANEL DE INFORMACIÓN -->
        <VBox prefWidth="153.2" spacing="12">

            <Label fx:id="tituloLibro" styleClass="titulo" />
            <Label fx:id="autorLibro" styleClass="subtitulo" />
            <Label fx:id="categoriaLibro" styleClass="badge-categoria" />
            <Label fx:id="isbnLibro" styleClass="texto-detalle" />
            <Label fx:id="disponiblesLibro" styleClass="texto-detalle" />
            <Label fx:id="descripcionLibro" maxWidth="420" styleClass="texto-descripcion" wrapText="true" />

            <Button fx:id="btnLeerLibro" styleClass="button-principal" text="Leer Libro" />
        </VBox>
   
          <Line endX="-99.8" endY="3.0" startX="-100.0" startY="380.0" styleClass="linea-decorativa" />

        <!-- Apartado de Reseñas -->
        <fx:include source="usuario/Vista-Reseñas.fxml" fx:id="vb_contenedorResenas"/>
    </HBox>

