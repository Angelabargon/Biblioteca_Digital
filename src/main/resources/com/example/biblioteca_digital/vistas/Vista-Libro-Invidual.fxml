<?xml version="1.0" encoding="UTF-8"?>

<!-- Imports para la vista -->
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>

<!-- Nodo Raíz -->
<AnchorPane prefHeight="393.0" prefWidth="850" styleClass="panel" stylesheets="@../estilo/estilo.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.biblioteca_digital.controladores.usuario.ControladorLibrosIndividual">

    <!-- Contenedor organizador de la vista -->
    <HBox layoutX="20.0" layoutY="20.0" prefHeight="380.0" prefWidth="810.0" spacing="30" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">

        <!-- Imagen de portada del libro -->
        <ImageView fx:id="imagenLibro" fitHeight="380" fitWidth="260" styleClass="imagen-libro" />

        <!-- Información del libro -->
        <VBox prefHeight="380.0" prefWidth="202.0" spacing="12">

            <!-- Título del libro -->
            <Label fx:id="tituloLabel" prefHeight="40.0" prefWidth="186.0" styleClass="titulo" />

            <!-- Autor del libro -->
            <Label fx:id="autorLabel" prefHeight="26.0" prefWidth="186.0" styleClass="subtitulo" />

            <!-- Categoría -->
            <Label fx:id="categoriaLabel" prefHeight="24.0" prefWidth="186.0" styleClass="badge-categoria" />

            <!-- Descripción del libro -->
            <Label fx:id="descripcionArea" prefHeight="24.0" prefWidth="186.0" styleClass="texto-detalle" />

            <!-- Disponibilidad -->
            <Label fx:id="disponiblesLabel" prefHeight="24.0" prefWidth="186.0" styleClass="texto-detalle" />

            <!-- Deslizable -->
            <ScrollPane fitToWidth="true" prefHeight="193.0" prefWidth="420.0" styleClass="scroll-pane-descripcion" VBox.vgrow="ALWAYS">
                <content>
                    <Label fx:id="isbnLabel" alignment="TOP_LEFT" styleClass="texto-descripcion" wrapText="true" />
                </content>
            </ScrollPane>

            <!-- Calificación media -->
            <Label fx:id="calificacionMedia" prefHeight="24.0" prefWidth="186.0" styleClass="texto-detalle" />
        </VBox>

        <!-- Línea decorativa -->
        <Line endX="-99.8" endY="3.0" startX="-100.0" startY="380.0" styleClass="linea-decorativa" />

        <!-- Apartado de reseñas -->
        <fx:include fx:id="vb_contenedorResenas" source="usuario/Vista-Reseñas.fxml" />
    </HBox>

</AnchorPane>
